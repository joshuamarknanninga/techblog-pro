<!-- views/post.handlebars -->

<article>
  <h2>{{post.title}}</h2>
  <p>By {{post.user.username}} on {{format_date post.createdAt}}</p>
  <div>
    <p>{{post.content}}</p>
  </div>
</article>

<section>
  <h3>Comments</h3>
  {{#if post.comments.length}}
    {{#each post.comments}}
      <div>
        <p><strong>{{this.user.username}}</strong> on {{format_date this.createdAt}}</p>
        <p>{{this.comment_text}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No comments yet!</p>
  {{/if}}
</section>

{{#if loggedIn}}
  <section>
    <h3>Add a Comment</h3>
    <form id="comment-form">
      <textarea name="comment_text" id="comment_text" required></textarea>
      <input type="hidden" name="post_id" value="{{post.id}}">
      <button type="submit">Submit</button>
    </form>
  </section>
{{else}}
  <p><a href="/login">Log in</a> to leave a comment.</p>
{{/if}}
